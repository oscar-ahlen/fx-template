<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx/8"
            fx:controller="se.simplistics.template4fx.controller.TableController"
            fx:id="root">

    <top>
        <HBox spacing="8">
            <padding>
                <Insets left="12" top="12" right="12" bottom="12"/>
            </padding>

            <Button styleClass="special-button"
                    style="-fx-graphic: url('/icons/24/ic_create_new_folder_white_24dp.png')"
                    onAction="#addTab"/>

            <Button text="Information"
                    styleClass="info-button"
                    onAction="#alertInfo"/>

            <Button text="Warning"
                    styleClass="warning-button"
                    onAction="#alertWarning"/>

            <Button text="Error"
                    styleClass="error-button"
                    onAction="#alertError"/>
        </HBox>
    </top>

    <center>
        <StackPane styleClass="theme-menu">
            <TabPane fx:id="tabPane" tabClosingPolicy="ALL_TABS">
            </TabPane>
        </StackPane>
    </center>

    <bottom>
        <HBox styleClass="theme-menu">
            <padding>
                <Insets left="12" top="8" right="12" bottom="12"/>
            </padding>

            <Label text="%label.rowcount.default" styleClass="status-label"/>
        </HBox>
    </bottom>
</BorderPane>