<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx/8"
            fx:controller="se.simplistics.template4fx.controller.MainController"
            fx:id="root">

    <stylesheets>
        <URL value="@/css/main.css"/>
    </stylesheets>

    <left>
        <AnchorPane styleClass="start-menu">
            <VBox AnchorPane.topAnchor="0"
                  AnchorPane.leftAnchor="0"
                  AnchorPane.rightAnchor="0"
                  AnchorPane.bottomAnchor="64">

                <fx:define>
                    <ToggleGroup fx:id="startMenuGroup"/>
                </fx:define>

                <!-- style="-fx-graphic: url('/icons/32/brick.png')" -->

                <ToggleButton text="View 1"
                              toggleGroup="$startMenuGroup"
                              styleClass="start-button"
                              onAction="#selectView1"/>

                <ToggleButton text="View 2"
                              toggleGroup="$startMenuGroup"
                              styleClass="start-button"
                              onAction="#selectView2"/>

                <ToggleButton text="View 3"
                              toggleGroup="$startMenuGroup"
                              styleClass="start-button"
                              onAction="#selectView3"/>

                <ToggleButton text="View 4"
                              toggleGroup="$startMenuGroup"
                              styleClass="start-button"
                              onAction="#selectView1"/>

                <ToggleButton text="View 5"
                              toggleGroup="$startMenuGroup"
                              styleClass="start-button"
                              onAction="#selectView1"/>
            </VBox>

            <Label text="%application.version"
                   styleClass="version-label"
                   AnchorPane.bottomAnchor="12"
                   AnchorPane.leftAnchor="12"/>
        </AnchorPane>
    </left>

    <center>
        <StackPane fx:id="stackPane">
            <fx:include fx:id="view3" source="form.fxml"/>
            <fx:include fx:id="view2" source="table.fxml"/>
            <fx:include fx:id="view1" source="web_view.fxml"/>
        </StackPane>
    </center>
</BorderPane>