<?import javafx.scene.control.*?>
<?import javafx.scene.Group?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import se.simplistics.template4fx.fx.control.QuadTabPane?>
<?import se.simplistics.template4fx.fx.control.SearchBox?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx/8"
            fx:controller="se.simplistics.template4fx.controller.MainController">

    <top>
        <MenuBar>
            <Menu text="%menu.file"/>

            <Menu text="%menu.edit"/>

            <Menu text="%menu.view"/>

            <Menu text="%menu.settings">
                <Menu text="%menu.settings.theme" style="-fx-graphic: url('/icons/16/change_whm_theme.png')">
                    <RadioMenuItem fx:id="lightTheme" text="%menu.settings.theme.light"/>
                    <RadioMenuItem fx:id="darkTheme" text="%menu.settings.theme.dark"/>
                </Menu>
            </Menu>

            <Menu text="%menu.help">
                <MenuItem text="%menu.help.about" style="-fx-graphic: url('/icons/16/information.png')"
                          onAction="#showAppInfo"/>
            </Menu>
        </MenuBar>
    </top>

    <center>
        <StackPane fx:id="stackpane">
            <QuadTabPane fx:id="pane"/>

            <Group fx:id="popup" StackPane.alignment="CENTER">
                <SearchBox fx:id="searchBox"/>
            </Group>
        </StackPane>
    </center>
</BorderPane>